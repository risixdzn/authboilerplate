{
    "name": "turbo",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev --parallel --no-daemon",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "migrate": "turbo run migrate",
        "generate": "turbo run generate"
    },
    "devDependencies": {
        "prettier": "^3.2.5",
        "turbo": "^2.3.3",
        "typescript": "5.5.4"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "npm@10.2.3",
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}
