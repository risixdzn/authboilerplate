{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es2020",
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,

        "paths": {
            "@/*": ["./*"]
        }
    },
    "watchOptions": {
        "watchFile": "fixedPollingInterval"
    }
}
